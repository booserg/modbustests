<Window x:Class="ModbusAsciiSlave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusAsciiSlave"
        Title="Slave" Width="300" Height="200">
    <StackPanel>
        <Button Click="Button_Click">Start</Button>
        <Button Click="Button_Click_1">Stop</Button>
        <GroupBox Header="Data">
            <StackPanel>
                <TextBox x:Name="tbData">12</TextBox>
                <Button Click="Button_Click_2">Set</Button>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
